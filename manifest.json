{
	"manifest_version": 2,
	"name": "Wiper",
	"version": "0.1",
	
	"description": "Black-list websites (URLs) on Google",

	"icons": {
		"48": "icons/wiper-48.png"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": "icons/wiper-48.png",
		"default_title": "Wiper"
	}, 
	
	"permissions": [
		"storage"
	],

	"sidebar_action": {
		"default_icon": "icons/wiper-48.png",
		"default_title": "Wiper",
		"default_panel": "sidebar/panel.html"
	},

	"content_scripts": [
		{
			"matches": [
			"*://*.google.com/search?*", 
			"*://*.google.de/search?*",
			"*://*.google.ac/search?*", 
			"*://*.google.ad/search?*", 
			"*://*.google.ae/search?*", 
			"*://*.google.af/search?*", 
			"*://*.google.ag/search?*", 
			"*://*.google.ai/search?*", 
			"*://*.google.al/search?*", 
			"*://*.google.am/search?*", 
			"*://*.google.ao/search?*", 
			"*://*.google.ar/search?*", 
			"*://*.google.as/search?*", 
			"*://*.google.at/search?*", 
			"*://*.google.au/search?*", 
			"*://*.google.az/search?*", 
			"*://*.google.ba/search?*", 
			"*://*.google.bd/search?*", 
			"*://*.google.be/search?*", 
			"*://*.google.bf/search?*", 
			"*://*.google.bg/search?*", 
			"*://*.google.bh/search?*", 
			"*://*.google.bi/search?*", 
			"*://*.google.bj/search?*", 
			"*://*.google.bn/search?*", 
			"*://*.google.bo/search?*", 
			"*://*.google.ca/search?*", 
			"*://*.google.tr/search?*", 
			"*://*.google.cn/search?*", 
			"*://*.google.cz/search?*", 
			"*://*.google.dk/search?*", 
			"*://*.google.ee/search?*", 
			"*://*.google.fr/search?*", 
			"*://*.google.gr/search?*", 
			"*://*.google.in/search?*", 
			"*://*.google.iq/search?*", 
			"*://*.google.jo/search?*", 
			"*://*.google.jp/search?*", 
			"*://*.google.ke/search?*", 
			"*://*.google.kw/search?*", 
			"*://*.google.il/search?*", 
			"*://*.google.lk/search?*", 
			"*://*.google.my/search?*", 
			"*://*.google.ps/search?*", 
			"*://*.google.pt/search?*", 
			"*://*.google.qa/search?*", 
			"*://*.google.sq/search?*", 
			"*://*.google.ro/search?*", 
			"*://*.google.se/search?*", 
			"*://*.google.ug/search?*"],
			"js": ["wiper.js"]
		}
	]
}
